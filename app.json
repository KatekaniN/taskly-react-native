{
  "expo": {
    "name": "taskly",
    "slug": "taskly",
    "version": "1.0.0",
    "scheme": "taskly",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "fonts": [
      {
        "asset": "@expo/vector-icons/fonts/MaterialIcons.ttf"
      },
      {
        "asset": "@expo/vector-icons/fonts/FontAwesome5_Regular.ttf"
      },
      {
        "asset": "@expo/vector-icons/fonts/FontAwesome5_Solid.ttf"
      },
      {
        "asset": "@expo/vector-icons/fonts/FontAwesome5_Brands.ttf"
      }
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ]
  }
}